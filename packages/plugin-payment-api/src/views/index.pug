block layout-content
  .my-layout
    .header #{__('Payment')}
    .paymentContainer
      each payment in payments
        button(type='button', class='btn btn-primary', data-toggle='modal', data-target='#myModal') #{payment.title}
      button#modal-btn Open Modal
      div#modal.modal-container
          div.modal-content
          h2 Modal Title
          p Modal content goes here.
          button#close-btn Close Modal
