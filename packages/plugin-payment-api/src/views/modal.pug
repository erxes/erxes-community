mixin modal(invoice)
    .modal.fade(id='myModal', tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-dialog
        .modal-content
          .modal-header
            button(type='button', class='close', data-dismiss='modal', aria-hidden='true') &times;
            h4(class='modal-title', id="paymentKind") #{invoice.paymentKind}
          .modal-body
            img(src="", alt="qr code", class="qr", id="qr-code")
          .modal-footer
            button(type='button', class='btn btn-primary') #{__('Manual check')}
